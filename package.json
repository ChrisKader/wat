{
	"name": "wat",
	"displayName": "WoW Addon Tools",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:watTree"
	],
	"extensionKind": [
		"workspace",
		"ui"
	],
	"main": "./dist/main.js",
	"contributes": {
		"languages": [
			{
				"id": "toc",
				"extensions": [
					".toc"
				],
				"aliases": [
					"Toc",
					"TOC"
				],
				"configuration": "./resources/language/configs/toc-language-configuration.json"
			},
			{
				"id": "lua",
				"extensions": [
					".lua"
				],
				"aliases": [
					"Lua"
				],
				"configuration": "./resources/language/configs/lua-language-configuration.json"
			}
		],
		"grammars": [
			{
				"path": "./resources/language/grammars/toc.tmLanguage.json",
				"scopeName": "source.toc",
				"language": "toc"
			},
			{
				"path": "./resources/language/grammars/lua.tmLanguage.json",
				"scopeName": "source.lua",
				"language": "lua"
			}
		],
		"snippets": [
			{
				"language": "lua",
				"path": "./resources/language/snippets/lua.json"
			},
			{
				"language": "toc",
				"path": "./resources/language/snippets/toc.json"
			}
		],
		"views": {
			"watTree": [
				{
					"id": "watTree",
					"name": "WoW Addon Outline"
				}
			]
		},
		"commands": [
			{
				"command": "watTree.refresh",
				"title": "Refresh",
				"icon": "$(timeline-refresh)"
			},
			{
				"command": "watTree.refreshNode",
				"title": "Refresh",
				"icon": "$(timeline-refresh)"
			},
			{
				"command": "watTree.renameNode",
				"title": "Rename"
			},
			{
				"command": "watTree.openFile",
				"title": "Open File"
			},
			{
				"command": "wat.createAddon",
				"title": "Create Addon"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "watTree.refresh",
					"when": "view == watTree",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "watTree.openFile",
					"when": "viewItem == file"
				},
				{
					"command": "watTree.renameNode",
					"when": "view == watTree"
				},
				{
					"command": "watTree.refreshNode",
					"when": "view == watTree",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "WoW Addon Outline",
				"properties": {
					"watTree.autorefresh": {
						"type": "boolean",
						"default": false
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "watTree",
					"title": "Addon Outline",
					"icon": "resources/wow.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "watTree",
				"contents": "In order to use WoW Addon Tool's features, you can open a folder containing a TOC file or create an addon from a template.\n[Open Folder](command:vscode.openFolder)\n[Create Addon](command:wat.createAddon)\n",
				"when": "workbenchState == empty"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/copy-webpack-plugin": "^10.1.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"copy-webpack-plugin": "^10.0.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"@types/byline": "^4.2.33",
		"@webpack-cli/init": "^1.1.3",
		"byline": "^5.0.0",
		"vscode-nls": "^5.0.0",
		"vscode-nls-dev": "^3.3.2"
	}
}
